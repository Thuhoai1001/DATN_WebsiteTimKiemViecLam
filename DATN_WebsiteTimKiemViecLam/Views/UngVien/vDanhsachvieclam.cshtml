@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList< DATN_WebsiteTimKiemViecLam.Models.vDanhsachvieclam>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
    <title>Document</title>
    <link href="~/css/vdanhsachvieclam.css" rel="stylesheet" />
</head>
<body  >
    <h3 style="color:black;"  class="text-center">Chào mừng bạn đến với trang tìm kiếm việc làm</h3>
    <h3 style="color:black;"  class="text-center">Tìm kiếm hàng nghìn cơ hội đến với bạn</h3>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-sm-12 col-lg-12">
                <form asp-controller="UngVien" asp-action="btnTimkiemViecLam" method="post">
                    <div style="height:70px;" class="row text-center">
                        <div style="padding:5px;  width:200px" class="col-sm-2 col-lg-2">
                    <input class="form-control" name="txtTencongviec" placeholder="Tên công việc..." type="text" value="" />
                    </div>
                        <div style="padding:5px; width:200px" class="col-sm-2 col-lg-2">
                        <div class="input-group flex-nowrap">
                            <select class="form-control item-search" name="txtMucluong">
                                <option value="0">Mức lương... </option>
                                <option value="1000000">1-3 triệu </option>
                                <option value="2">3-6 triệu</option>
                                <option value="3">7-10 triệu</option>
                                <option value="4">trên 10 triệu</option>
                            </select>
                        </div>
                    </div>
                        <div style="padding:5px;  width:200px" class="col-sm-2 col-lg-2">
                        <div class="input-group flex-nowrap">
                            <select class="form-control item-search" name="txtDiachi">
                                <option value=" ">Địa chỉ... </option>
                                <option value="Hà Nội">Hà Nội </option>
                                <option value="TP.Hồ Chí Minh">TP.Hồ Chí Minh</option>
                                <option value="Hà Nam">Hà Nam</option>
                                <option value="Nha Trang">Nha Trang</option>
                            </select>

                        </div>
                    </div>
                        <div style="padding:5px; width:200px" class="col-sm-2 col-lg-2">
                        <div class="input-group flex-nowrap">
                            <select class="form-control item-search" name="txtKinhnghiem">
                                <option value="100">Kinh nghiệm... </option>
                                <option value="1">dưới 1 năm </option>
                                <option value="2">1-2 năm</option>
                                <option value="3">Trên 3 năm </option>
                                <option value="100">Không yêu cầu</option>
                            </select>

                        </div>
                    </div>
                        <div style="padding:5px;  width:200px" class="col-sm-2 col-lg-2">
                        <div class="input-group flex-nowrap">
                            <select class="form-control item-search" name="dThoigiandangtuyen">
                                <option value="100">Ngày đăng tải... </option>
                                <option value="1">Mới nhất </option>
                                <option value="3">3 ngày trước</option>
                                <option value="7">7 ngày trước </option>
                                <option value="15">15 ngày trước</option>
                            </select>

                        </div>
                    </div>
                        <div style="padding:5px;  width:200px" class="col-sm-2 col-lg-2">
                            <button style="padding:5px; width:200px;background:#3D3BB2" type="submit" class="btn btn-primary">
                            <i class="fa-solid fa-magnifying-glass"></i>
                            Tìm kiếm
                        </button>
                    </div>
                    </div>
                </form>
                </div>
                <div class="content1" style="color:black;">
                <h5 style="color:#3D3BB2" class="fs-3 fw-bold d-flex flex-nowrap">Công việc top đầu</h5>
                    <div class="row text-center">
                        @foreach (var item in Model)
                        {
                            <div class="col-sm-3 col-lg-3">
                            <div class="card" style="width: 18rem;height:350px; padding-left:20px; margin-bottom:20px;">
                                <img src="data:image/png;base64,@item.SLogo" alt="Hình ảnh" class="item-image card-img-top p-2" @* data-id="@item.PkSMaBai" *@>
                                    <div class="card-body">
                                        <div style="height:150px;">
                                        <a style="text-decoration:none" href="@Url.Action("btnHienthichitietvieclam", new {PkSMaBai=@item.PkSMaBai})" class="card-title fw-bold">@item.STenBai</a>
                                        <p class="card-text fs-6">@item.sTendoanhnghiep</p>
                                        </div>
                                        <div class="row fw-bold fst-italic fs-6">
                                            <div class="col-6 col-sm-6 col-lg-6 fs-6">
                                                <span>@item.FMucLuong</span>
                                            </div>
                                            <div class="col-6 col-sm-6 col-lg-6 fs-6">
                                                <span>@item.sDiachi</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                       
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center">
                                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("btnHienthidanhsachVL", new { page = ViewBag.CurrentPage - 1 })" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>
                                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                {
                                    <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                                        <a class="page-link" href="@Url.Action("btnHienthidanhsachVL", new { page = i })">@i</a>
                                    </li>
                                }
                                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("btnHienthidanhsachVL", new { page = ViewBag.CurrentPage + 1 })" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                            </ul>  
                        </nav>
                        
                    </div>
                <h5 style="color:#3D3BB2" class="fs-3 fw-bold d-flex flex-nowrap">Doanh nghiệp top đầu</h5>
                    <div class="content2">
                        <div  class="row text-center" >
                            @foreach (TblDoanhnghiep item in ViewBag.model1Data)
                            {
                                <div class="col-sm-3 col-lg-3">
                                <div class="card" style="width: 18rem;height:200px; padding-left:20px; margin-bottom:20px;">
                                        <img src="data:image/png;base64,@item.SLogo" alt="Hình ảnh" data-id="@item.SLogo" class="card-img-top p-2">
                                        <div class="card-body">
                                            <div>
                                                <h5 class="card-title fw-bold fs-6">@item.STenDn</h5>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
                    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
                    crossorigin="anonymous">
                </script>

</body>
</html>