<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
<style>
    .list-group-item {
        height:50px;
    }
</style>
<div>
    <h3 style="color:#FFFF;background:#3D3BB2;height:60px;border-radius:5px"> DANH SÁCH CV ĐÃ ỨNG TUYỂN</h3>
    <div style="background:#FFFF; border-radius:5px" class="grid text-black">
        <div style="text-transform: uppercase;" class="row">
            <div class="col-3 text-lg-start">
                <a href="@Url.Action("btnHienthidanhsachcv","UngVien",new {bTrangthai=""})" class="list-group-item list-group-item-action active row" aria-current="true">Chờ phản hồi</a>
                <a href="@Url.Action("btnHienthidanhsachcv","UngVien",new {bTrangthai=true})" class="list-group-item list-group-item-action row">Chờ phỏng vấn</a>
                <a href="@Url.Action("btnHienthidanhsachcv","UngVien",new {bTrangthai=false})" class="list-group-item list-group-item-action ">CV đã bị từ chối</a>
            </div>

            <div  class="col-9">
                @foreach (vdanhsachcvdaungtuyen item in Model)
                {

                    <div class="border border-secondary row rounded-4 ">
                        <div style="height:100px; border-radius:5px; border:0.5px" class="col-6 ">
                            <div class="fw-bold ">
                                @item.sTenDN
                            </div>
                            <div style="text-transform:lowercase; font-size:15px" >
                                @item.sTenBai
                            </div>
                        </div>
                        <div class="col-2">@item.DNgayGui.ToString("MM/dd/yyyy")</div>
                        <a href="@item.SCv" class="col-1"><img src="~/images/bxs_file.png" /></a>
                    </div>

                }


            </div>

        </div>

    </div>
</div>
