<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"> <!-- Thêm Font Awesome -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
<style>
    .list-group-item {
        height: 50px;
        display: flex;
        align-items: center;
        padding-left: 15px;
        color: #000;
        text-decoration: none;
    }

        .list-group-item i {
            margin-right: 10px;
        }

        .list-group-item.active {
            background-color: #003493;
            color: #fff;
        }

    .border-rounded {
        border-radius: 5px;
    }

    .grid {
        background: #fff;
        border-radius: 5px;
    }

    .cv-item {
        margin-bottom: 2%;
        border-radius: 3%;
        border: 0.5px solid #ccc;
    }

        .cv-item:hover {
            background-color: #f0f0f0;
        }

        .cv-item .cv-info {
            height: 100px;
            width: 60%;
            
            padding: 10px;
        }

            .cv-item .cv-info .fw-bold {
                font-weight: bold;
            }

            .cv-item .cv-info .job-title {
                text-transform: lowercase;
                font-size: 15px;
            }

                .cv-item .cv-info .job-title:hover {
                    text-decoration: underline;
                }

        .cv-item .date {
            font-size: 14px;
        }

        .cv-item .cv-link {
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .cv-item .cv-link img {
                height: 30px;
                width: auto;
            }
</style>

<div>
    <h3 style="color: #fff; background: #003493; height: 60px; border-radius: 5px; width: 101%; padding: 10px 15px;">DANH SÁCH CV ĐÃ ỨNG TUYỂN</h3>
    <div class="grid text-black border-rounded" style="background: #fff; border-radius: 5px;">
        <div class="row">
            <div class="col-3 text-lg-start">
                <a href="@Url.Action("btnHienthidanhsachcv","UngVien",new {bTrangthai=""})" class="list-group-item list-group-item-action active"><i class="fas fa-arrow-right"></i> Chờ phản hồi</a>
                <a href="@Url.Action("btnHienthidanhsachcv","UngVien",new {bTrangthai=true})" class="list-group-item list-group-item-action"><i class="fas fa-arrow-right"></i> Chờ phỏng vấn</a>
                <a href="@Url.Action("btnHienthidanhsachcv","UngVien",new {bTrangthai=false})" class="list-group-item list-group-item-action"><i class="fas fa-arrow-right"></i> CV đã bị từ chối</a>
            </div>
            <div class="col-9">
                @foreach (vdanhsachcvdaungtuyen item in Model)
                {
                    <div class="cv-item border-rounded">
                        <div class="row align-items-center ">
                            <div class="col">
                                <div class="cv-info">
                                    <div class="fw-bold">@item.sTenDN</div>
                                    <div class="job-title">@item.sTenBai</div>
                                </div>
                            </div>
                            <div class="col-2 date">@item.DNgayGui.ToString("MM/dd/yyyy")</div>
                            <div class="col-1 cv-link"><a href="@item.SCv"><img src="~/images/bxs_file.png" /></a></div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>
